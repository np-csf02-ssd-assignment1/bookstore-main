@page "{id:int?}"
@model WebFrontend.Pages.Carts.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cart.Quantity" class="control-label"></label>
                <input asp-for="Cart.Quantity" class="form-control" />
                <span asp-validation-for="Cart.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.DateCreated" class="control-label"></label>
                <input asp-for="Cart.DateCreated" class="form-control" />
                <span asp-validation-for="Cart.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.ProductId" class="control-label"></label>
                <input asp-for="Cart.ProductId" class="form-control" value="@RouteData.Values["id"]" readonly />
                <span asp-validation-for="Cart.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
