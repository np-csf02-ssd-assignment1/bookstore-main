@page
@model WebFrontend.Pages.Carts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Quantity)
            </th>
            <th>
                Date Listed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ItemId">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ItemId">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                Total Price:
            </td>
            <td>
                @Model.TotalPrice
            </td>
        </tr>
    </tbody>
</table>

<hr />
<p id="Checkout">
    @if (Model.TotalPrice != 0)
    {
        <a asp-page="/Orders/Checkout">Check Out</a>
    }

</p>