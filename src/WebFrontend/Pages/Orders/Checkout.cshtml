@page
@model WebFrontend.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.ShippingAddress" class="control-label"></label>
                <input asp-for="Order.ShippingAddress" class="form-control" required />
                <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShippingTime" class="control-label"></label>
                <input asp-for="Order.ShippingTime" class="form-control" min="@DateTime.Today.AddDays(15).ToString("yyyy-MM-dd")" required />
                <span asp-validation-for="Order.ShippingTime" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label">Payment Type</label>
                <select asp-for="Order.PaymentID" class="form-control">
                    <option value="1">Visa</option>
                    <option value="2">Master</option>
                    <option value="3">Diners Club</option>
                </select>
                <span asp-validation-for="Order.PaymentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Card number</label>
                <input asp-for="CardNumber" type="text" class="form-control" required/>
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpDate" class="control-label">Expiry date</label>
                <input asp-for="ExpDate" type="text" class="form-control" required/>
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVV" class="control-label">CVV</label>
                <input asp-for="CVV" type="text" class="form-control" required/>
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.BillingAddress" class="control-label"></label>
                <input asp-for="Order.BillingAddress" class="form-control" required />
                <span asp-validation-for="Order.BillingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
