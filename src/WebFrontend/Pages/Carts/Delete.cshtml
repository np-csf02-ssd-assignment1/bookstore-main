@page
@model WebFrontend.Pages.Carts.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Quantity)
        </dd>
        <dt class="col-sm-2">
            Date Listed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.DateCreated)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cart.CartId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Cart</a>
    </form>
</div>
